{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "MochiCompanion": "Debug"
    }
  },
  "Mochi": {
    "ConnectionType": "Serial",
    "Address": "COM3",
    "Port": 115200,
    "ReconnectInterval": 5000
  },
  "Monitors": {
    "Time": {
      "Enabled": true,
      "CheckInterval": 60000
    },
    "Audio": {
      "Enabled": true,
      "CheckInterval": 2000
    },
    "System": {
      "Enabled": true,
      "CheckInterval": 5000,
      "CpuThresholdHigh": 80,
      "CpuThresholdLow": 20
    },
    "Application": {
      "Enabled": true,
      "CheckInterval": 3000
    }
  }
}
